@model IEnumerable<MVC_JobPortalProject.Models.tbl_JobCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    *{
        overflow:hidden;
    }
</style>
@*<h2>Index</h2>*@
<p style="margin-top:20px;">
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-primary" })
</p>
@if(Model.Count()==0)
{
    <h2 style="text-align:center;" class="display-2"><b>No Record Found</b></h2>
}
else
{



    <div class="row">
        <div class="col-md-11">
            <table class="table table-responsive table-bordered table-hover table-condensed col-md-8">

                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>@Html.DisplayName("Action(s)")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    @Html.DisplayName("Active")
                                }
                                else
                                {
                                    @Html.DisplayName("In-Active")
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.CID }, new { @class = "btn btn-primary" }) |
                                @*@Html.ActionLink("Details", "Details", new { id = item.CID }, new { @class = "btn btn-info" }) |*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.CID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}