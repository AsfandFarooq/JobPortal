@model MVC_JobPortalProject.Models.tbl_JobCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .btnstyle{
        margin-top:20px;
    }
</style>

@using (Html.BeginForm("Create", "tbl_JobCategory", FormMethod.Post, new { @class = "col-md-10" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="margin-top:20px;"><b>Add Job Category</b></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Category Name" } } )
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @*@Html.EditorFor(model => model.CategoryStatus, new { @class = "form-control" })*@
                    @Html.DropDownListFor(m => Model.IsActive,
                            new List<SelectListItem> { new SelectListItem { Text = "Active", Value = "true" },
                            new SelectListItem { Text = "In-Active", Value = "false" } }, "Select Category Status", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => Model.IsActive)

                    
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Data" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index",null,new { @class = "btnstyle btn btn-primary" })
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
